<h1>Pets#index</h1>
<p>Find me in app/views/pets/index.html.erb</p>

<div>
  <% if current_user %>
    <li><%= current_user.email %>さん</li>
    <li><%= link_to '登録', new_pet_path %></li>

  <% end %>
</div>


<div>
  <% @pets.each do |pet| %>

    <div>
      <ul>
        <%= link_to pet_path(pet.id) do %>
          <li><p>名前：<%= pet.name %></p></li>
          <li><p>年齢：<%= pet.age %></p></li>
          <li><p>説明：<%= pet.description %></p></li>

          <%= image_tag pet.image.url, width: '30%', height: '30%' %>
        <% end %>
        <li><%= link_to '編集', edit_pet_path(pet.id) %></li>
        <li><%= link_to '削除', pet_path(pet.id), remote: true, method: :delete %></li>
      </ul>
    </div>

  <% end %>
</div>